<!-- bg_marker.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#0077FF" /> <!-- Background color of the marker -->
    <corners android:radius="8dp" /> <!-- Rounded corners of the marker -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" /> <!-- Padding inside the marker -->
</shape>
